 	-Wl,--whole-archive ../$(LIBNAME) -Wl,--no-whole-archive $(EXTRALIB)
-	$(CC) $(CFLAGS) $(LDFLAGS) -w -o linktest linktest.c ../$(LIBSONAME) $(FEXTRALIB) && echo OK.
+	echo OK.
 	rm -f linktest
 
 endif
@@ -312,9 +312,8 @@ objcopy.def : $(GENSYM) ../Makefile.system ../getarch.c
